
<h1>Booking History</h1>

<table>
  <thead>
  <tr>
    <th style="text-align:center">Email</th>
    <th style="text-align:center">Room number</th>
    <th style="text-align:center">Start</th>
    <th style="text-align:center">End</th>
    <th style="text-align:center">Team</th>
    <th colspan="3"></th>
  </tr>

  </thead>

  <tbody>
  <% @bookings.each do |booking| %>
      <tr>
        <td style="text-align:center"><%= booking.email %></td>
        <td style="text-align:center"><%= booking.room_id %></td>
        <td style="text-align:center"><%= booking.start %></td>
        <td style="text-align:center"><%= booking.end %></td>
        <td style="text-align:center"><%= booking.team %></td>
        <td><%= link_to 'Release Booking', booking, method: :delete, data: {confirm: 'Are you sure?'}, class: "text-danger" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', getrooms_path %>
